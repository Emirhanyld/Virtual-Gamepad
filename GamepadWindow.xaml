<Window x:Class="Virtual_Gamepad.GamepadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Virtual_Gamepad"
        mc:Ignorable="d"
        WindowState="Normal"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        Topmost="True"
        IsHitTestVisible="False"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        Focusable="False"
        Title="GamepadWindow" Width="1920" Height="1080">
    <Canvas HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <local:Thumbstick x:Name="LeftStick" Canvas.Bottom="60" Canvas.Left="100" Button="Left" Stick="Left"/>
        <local:Thumbstick x:Name="RightStick" Canvas.Bottom="60" Canvas.Right="200" Button="Right" Stick="Right"/>
    </Canvas>
</Window>
