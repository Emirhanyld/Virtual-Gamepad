<UserControl x:Class="Virtual_Gamepad.Thumbstick"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Virtual_Gamepad"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <Canvas Name="LayoutRoot" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Ellipse Fill="White" Opacity="0.15" Name ="Joystick" Height="100" Canvas.Left="0" Stroke="Black" Canvas.Bottom="0" Width="100" />
        <Ellipse Fill="Wheat" Opacity="0.7" Name="Knob" Height="30" Canvas.Left="35" Stroke="Black" Canvas.Bottom="35" Width="30" />
    </Canvas>
</UserControl>
